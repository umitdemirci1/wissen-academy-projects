@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product List Page";
}

<h1 class="bg-info text-white">Product List -- Home/Index</h1>
<table class="table tabletable-bordered table-hover">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.ProductName</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.CategoryName</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="5" class="text-center">Total Products: @Model.Count()</td>
        </tr>
    </tfoot>
</table>