@model Student

@{
    ViewData["Title"] = "Student Index";
}

<h1 class="bg-info text-white">Yeni Öğrenci Ekle</h1>
<hr />
<div class="row">
    <div class="col-lg-8 col-md-8 col-sm-8">
        <form asp-action="Create" asp-controller="Student" method="post">
            <div class="mb-2">
                <label asp-for="@Model.StudentID" class="form-control">Student ID</label>
                <input asp-for="@Model.StudentID" class="form-control" />
            </div>
            <div class="mb-2">
                <label asp-for="@Model.FirstName" class="form-control">First Name</label>
                <input asp-for="@Model.FirstName" class="form-control" />
            </div>
            <div class="mb-2">
                <label asp-for="@Model.LastName" class="form-control">Last Name</label>
                <input asp-for="@Model.LastName" class="form-control" />
            </div>
            <div class="mb-2">
                <label asp-for="@Model.StudentNumber" class="form-control">Student Number</label>
                <input asp-for="@Model.StudentNumber" class="form-control" />
            </div>
            <div class="mb-2">
                <label asp-for="@Model.Address" class="form-control">Student Address</label>
                <input asp-for="@Model.Address" class="form-control" />
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Gender.GenderID">Cinsiyet</label>
                <select class="form-control">
                    <option>Cinsiyet Seçiniz...</option>
                    @{
                        List<Gender> genderList = (List<Gender>)ViewData["Gender"];
                    }
                    @foreach (var item in genderList)
                    {
                        <option value="@item.GenderID">@item.GenderName</option>
                    }
                </select>
            </div>
            <div class="mb-2">
                <label asp-for="@Model.Gender.GenderID">Cinsiyet</label>
                <select class="form-control">
                    <option>Ülke Seçiniz...</option>
                    @{
                        List<Country> countryList = (List<Country>)ViewData["Country"];
                    }
                    @foreach (var item in countryList)
                    {
                        <option value="@item.CountryID">@item.CountryName</option>
                    }
                </select>
            </div>
            <div class="mb-2">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>