@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "User List";
}

<h1 class="bg-info text-white">All Users</h1>
<a asp-action="Create" asp-controller="Admin" class="btn btn-secondary">Create User</a>

<table class="table table-sm table-bordered">
    <tr>
        <th>User ID</th>
        <th>User Name</th>
       <th>Email</th> 
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (AppUser user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-controller="Admin" asp-route-id="@user.Id">Update</a>
            </td>
            <td>
                <form asp-action="Delete" asp-controller="Admin" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>