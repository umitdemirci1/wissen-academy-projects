@using Microsoft.AspNetCore.Identity; 
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Role List";
}

<h1 class="bg-info text-white">Role List</h1>
<a asp-action="Create" asp-controller="Role" class="btn btn-secondary">Create New Role</a>

<table class="table table-sm table-bordered">
   <tr>
       <th>Role ID</th>
       <th>Role Name</th>
       <th>Users</th>
       <th>Update</th>
       <th>Delete</th>
   </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-controller="Role" asp-route-id="@role.Id">Update</a>
            </td>
            <td>
                <form asp-action="Delete" asp-controller="Role" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>